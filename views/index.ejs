<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head.ejs") %>

<body>

    <%- include("./partials/nav.ejs") %>
    <!-- =value(escapes spl char)
                                                        - includes them -->

    <div class="home content">
        <h2>All Blogs</h2>
        <% if(blog.length > 0) { %>
        <% blog.forEach( blog => { %>
        <a class="single" href="/blogs/<%= blog._id %>">
            <div class="blog-border">
                <h3 class="title-blog"> <%= blog.title %></h3>
                <p class="snippet-blog"><%= blog.snippet %></p>
            </div>
        </a>
        <%  })} else {%>
        <p>No blog contents to display...</p>
        <% } %>
    </div>
    <%- include("./partials/foot.ejs") %>
</body>

</html>